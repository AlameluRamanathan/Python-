from math import pi
class Circle:
    def __init__(self,radius):
        self.radius = radius
    def area1(self):
        return pi*(self.radius**2)
    def perimeter1(self):
        return pi*self.radius

r = int(input("Enter radius of circle: "))
c = Circle(r)
x = c.area1()
y = c.perimeter1()
print("Area of circle: ",x)
print("Perimeter of circle: ", y)
